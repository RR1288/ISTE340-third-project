@model FooterModel

<footer class="footer mt-5 text-light" style="background-color: #081526; color: #ffffff;">
    <div class="container py-4">
        <!-- Social Media Section -->
        <div class="mb-4">
            <h5 class="text-orange">@Model.Social.Title</h5>
            <p>@Model.Social.Tweet</p>
            <p>@Model.Social.By</p>
            <div>
                <a href="@Model.Social.Twitter" target="_blank" class="btn btn-outline-light btn-sm me-2">Twitter</a>
                <a href="@Model.Social.Facebook" target="_blank" class="btn btn-outline-light btn-sm">Facebook</a>
            </div>
        </div>

        <!-- Quick Links Section -->
        <div class="mb-4">
            <h5 class="text-orange">Quick Links</h5>
            <ul class="list-unstyled">
                @foreach (var link in Model.QuickLinks)
                {
                    <li>
                        <a href="@link.Href" target="_blank">@link.Title</a>
                    </li>
                }
            </ul>
        </div>

        <!-- Copyright Section -->
        <div class="mt-3" style="font-size: 0.9rem;">
            @Html.Raw(Model.Copyright.Html)
        </div>
    </div>
</footer>
