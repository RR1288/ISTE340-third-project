@model ThirdProject.Models.EmploymentModel

@{
    ViewData["Title"] = Model.pageTitle;
}

<h1>@Model.pageTitle</h1>

<!-- Introduction Section -->
<section>
    <h2>@Model.introduction.title</h2>
    <div>
        @foreach (var content in Model.introduction.content)
        {
            <div class="card px-3 py-2 m-5 text-center">
                <div class="card-body">
                    <h5 class="card-subtitle text-muted">@content.title</h5>
                    <p class="card-text px-5 py-2"> @content.description</p>
                </div>
            </div>
        }
    </div>
</section>

<!-- Degree Statistics Section -->
<section class="mb-5">
    <h2>@Model.degreeStatistics.title</h2>
    <div class="statistics-container">
        @foreach (var stat in Model.degreeStatistics.statistics)
        {
            <div class="stat-item">
                <div class="stat-value">@stat.value</div>
                <div class="stat-description">@stat.description</div>
            </div>
        }
    </div>
</section>

<!-- Employers Section -->
<section class="mb-5">
    <h2>@Model.employers.title</h2>
    <div id="employersCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.employers.employerNames.Count; i += 3)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row justify-content-center">
                        @for (int j = i; j < i + 3 && j < Model.employers.employerNames.Count; j++)
                        {
                            <div class="col-md-4 d-flex justify-content-center">
                                <a class="unique-card" href="https://www.google.com/search?q=@Uri.EscapeDataString(@Model.employers.employerNames[j])" target="_blank">
                                    <div class="background-overlay"></div>
                                    <div class="card-content">
                                        <div class="card-title">@Model.employers.employerNames[j]</div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#employersCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#employersCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Careers Section -->
<section class="mb-5">
    <h2>@Model.careers.title</h2>
    <div id="careersCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.careers.careerNames.Count; i += 3)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row justify-content-center">
                        @for (int j = i; j < i + 3 && j < Model.careers.careerNames.Count; j++)
                        {
                            <div class="col-md-4 d-flex justify-content-center">
                                <a class="unique-card" href="https://www.google.com/search?q=@Uri.EscapeDataString(@Model.careers.careerNames[j])" target="_blank">
                                    <div class="background-overlay"></div>
                                    <div class="card-content">
                                        <div class="card-title">@Model.careers.careerNames[j]</div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#careersCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#careersCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


<!-- Coop Table Section -->
<section class="mb-5">
    <h2>@Model.coopTable.title</h2>
    <table id="coopTable" class="display">
        <thead>
            <tr>
                <th>Employer</th>
                <th>Degree</th>
                <th>City</th>
                <th>Term</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coop in Model.coopTable.coopInformation)
            {
                <tr>
                    <td>@coop.employer</td>
                    <td>@coop.degree</td>
                    <td>@coop.city</td>
                    <td>@coop.term</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<!-- Employment Table Section -->
<section class="mb-5">
    <h2>@Model.employmentTable.title</h2>
    <table id="employmentTable" class="display">
        <thead>
            <tr>
                <th>Employer</th>
                <th>Degree</th>
                <th>City</th>
                <th>Title</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employment in Model.employmentTable.professionalEmploymentInformation)
            {
                <tr>
                    <td>@employment.employer</td>
                    <td>@employment.degree</td>
                    <td>@employment.city</td>
                    <td>@employment.title</td>
                    <td>@employment.startDate</td>
                </tr>
            }
        </tbody>
    </table>
</section>
